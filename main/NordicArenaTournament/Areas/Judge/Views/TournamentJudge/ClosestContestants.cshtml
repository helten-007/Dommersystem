@model NordicArenaTournament.Areas.Judge.ViewModels.ClosestContestantsViewModel
@using NordicArenaDomainModels.Resources
@using NordicArenaTournament.Common

@if (Model != null)
{
	<ul id="hidden-contestants">
		@{ int id = 0; }
		@foreach (var cont in Model.Contestants)
		{
			<li style="display:none" id="cont_@id" style="display: block;"><span class="close-cont-pos">@cont.Position:</span> <span class="close-cont-name">@cont.Name</span> <span class="close-cont-score">@cont.TotalScore</span></li>
			id++;
		}
	</ul>
	<ul id="visible-contestants"></ul>
}